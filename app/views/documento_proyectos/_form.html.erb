<%= form_with(model: documento_proyecto, local: true) do |form| %>
  <% if documento_proyecto.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(documento_proyecto.errors.count, "error") %> impidieron guardar el documento:</h5>
      <ul>
        <% documento_proyecto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :proyecto_id, class: "form-label" %>
    <%= form.text_field :proyecto_id, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :nombre, class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :presente, class: "form-check-input" %>
    <%= form.label :presente, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= form.label :observaciones, class: "form-label" %>
    <%= form.text_area :observaciones, class: "form-control" %>
  </div>

  <div class="text-end">
    <%= form.submit documento_proyecto.new_record? ? "Crear Documento" : "Actualizar Documento", class: "btn btn-primary" %>
  </div>
<% end %>
