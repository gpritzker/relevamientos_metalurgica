<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Subproductos</h1>
  <%= link_to 'Nuevo Subproducto', new_subproducto_path, class: 'btn btn-success' %>
</div>

<% if @subproductos.any? %>
  <table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th>Producto</th>
        <th>Sector</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @subproductos.each do |subproducto| %>
        <tr>
          <td><%= subproducto.nombre %></td>
          <td><%= subproducto.producto&.nombre %></td>
          <td><%= subproducto.sector&.nombre %></td>
          <td class="text-end">
            <%= link_to 'Ver', subproducto, class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Editar', edit_subproducto_path(subproducto), class: 'btn btn-sm btn-outline-secondary me-1' %>
            <%= link_to 'Eliminar', subproducto, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-secondary text-center">No hay subproductos registrados.</div>
<% end %>
