<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Tipos de Tiempo Muerto</h1>
  <%= link_to 'Nuevo Tipo', new_tipo_tiempo_muerto_path, class: "btn btn-success" %>
</div>

<% if @tipo_tiempo_muertos.any? %>
  <table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @tipo_tiempo_muertos.each do |tipo| %>
        <tr>
          <td><%= tipo.nombre %></td>
          <td class="text-end" style="white-space: nowrap;">
            <span class="d-inline-block">
              <%= link_to tipo_tiempo_muerto_path(tipo), class: "btn btn-info btn-sm", title: "Ver" do %>
                <i class="bi bi-eye"></i>
              <% end %>
            </span>
            <span class="d-inline-block">
              <%= link_to edit_tipo_tiempo_muerto_path(tipo), class: "btn btn-warning btn-sm", title: "Editar" do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </span>
            <span class="d-inline-block">
              <%= button_to tipo_tiempo_muerto_path(tipo),
                            method: :delete,
                            data: { confirm: '¿Estás seguro de eliminar este tipo?' },
                            class: "btn btn-danger btn-sm",
                            title: "Eliminar" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @tipo_tiempo_muertos %>
  </div>
<% else %>
  <div class="alert alert-secondary text-center">
    No hay tipos de tiempo muerto registrados.
  </div>
<% end %>