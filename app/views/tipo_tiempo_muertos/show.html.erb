
<div class="card mt-4 shadow-sm">
  <div class="card-header bg-dark text-white">
    <h2 class="mb-0">Detalle del Tipo de Tiempo Muerto</h2>
  </div>

  <div class="card-body">
    <p><strong>Nombre:</strong> <%= @tipo_tiempo_muerto.nombre %></p>
  </div>

  <div class="card-footer text-end">
    <%= link_to "Editar", edit_tipo_tiempo_muerto_path(@tipo_tiempo_muerto), class: "btn btn-warning me-2" %>
    <%= link_to "Volver", tipo_tiempo_muertos_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Eliminar", @tipo_tiempo_muerto, method: :delete,
                  data: { confirm: "¿Estás seguro de eliminar este tipo?" },
                  class: "btn btn-danger" %>
  </div>
</div>