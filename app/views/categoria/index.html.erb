<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Categorías</h1>
  <%= link_to "Nueva Categoría", new_categorium_path, class: "btn btn-success" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.nombre %></td>
        <td><%= categorium.descripcion %></td>
        <td class="text-end">
          <%= link_to "Ver", categorium_path(categorium), class: "btn btn-info btn-sm me-1" %>
          <%= link_to "Editar", edit_categorium_path(categorium), class: "btn btn-warning btn-sm me-1" %>
          <%= link_to "Eliminar", categorium_path(categorium),
                      method: :delete,
                      data: { confirm: "¿Estás seguro de eliminar esta categoría?" },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>