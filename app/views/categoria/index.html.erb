<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Categorías</h1>
  <%= link_to "Nueva Categoría", new_categorium_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-striped align-middle">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.nombre %></td>
        <td><%= categorium.descripcion %></td>
        <td class="text-end">
          <div class="d-inline-flex gap-1">
            <%= link_to categorium_path(categorium), class: "btn btn-info btn-sm", title: "Ver" do %>
              <i class="bi bi-eye"></i>
            <% end %>

            <%= link_to edit_categorium_path(categorium), class: "btn btn-warning btn-sm", title: "Editar" do %>
              <i class="bi bi-pencil"></i>
            <% end %>

            <%= link_to categorium_path(categorium),
                          method: :delete,
                          data: { confirm: "¿Estás seguro de eliminar esta categoría?" },
                          class: "btn btn-danger btn-sm", title: "Eliminar" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @categoria %>
</div>
