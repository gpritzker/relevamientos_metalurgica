<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="card mt-4 shadow-sm">
  <div class="card-header bg-dark text-white">
    <h2 class="mb-0">Detalle del Operario</h2>
  </div>

  <div class="card-body">
    <p><strong>Nombre:</strong> <%= @operario.nombre %></p>
    <p><strong>Legajo:</strong> <%= @operario.legajo %></p>
    <p><strong>Sector:</strong> <%= @operario.sector %></p>
    <p><strong>Activo:</strong> <%= @operario.activo? ? "✅ Sí" : "❌ No" %></p>
  </div>

  <div class="card-footer text-end">
    <%= link_to "Editar", edit_operario_path(@operario), class: "btn btn-warning me-2" %>
    <%= link_to "Volver al listado", operarios_path, class: "btn btn-secondary me-2" %>
    <br>
    <%= button_to "Eliminar", @operario, method: :delete,
                  data: { confirm: "¿Estás seguro de eliminar este operario?" },
                  class: "btn btn-danger" %>
  </div>
</div>