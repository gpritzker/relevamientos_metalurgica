<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Operarios</h1>
  <%= link_to "Nuevo Operario", new_operario_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th>Legajo</th>
      <th>Sector</th>
      <th>Activo</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @operarios.each do |operario| %>
      <tr>
        <td><%= operario.nombre %></td>
        <td><%= operario.legajo %></td>
        <td><%= operario.sector %></td>
        <td><%= operario.activo? ? "✅" : "❌" %></td>
        <td class="text-end">
          <%= link_to "Ver", operario_path(operario), class: "btn btn-info btn-sm me-1" %>
          <%= link_to "Editar", edit_operario_path(operario), class: "btn btn-warning btn-sm me-1" %>
          <%= link_to "Eliminar", operario_path(operario),
                      method: :delete,
                      data: { confirm: "¿Estás seguro de eliminar este operario?" },
                      class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
