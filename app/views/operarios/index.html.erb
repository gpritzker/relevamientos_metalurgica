

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Operarios</h1>
  <%= link_to "Nuevo Operario", new_operario_path, class: "btn btn-success" %>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th>Legajo</th>
        <th>Sector</th>
        <th>Activo</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @operarios.each do |operario| %>
        <tr>
          <td><%= operario.nombre %></td>
          <td><%= operario.legajo %></td>
          <td><%= operario.sector %></td>
          <td class="text-center">
            <%= operario.activo? ? raw('<i class="bi bi-check-circle-fill text-success"></i>') : raw('<i class="bi bi-x-circle-fill text-danger"></i>') %>
          </td>
          <td class="text-end">
            <%= link_to operario_path(operario), class: "btn btn-info btn-sm me-1", title: "Ver" do %>
              <i class="bi bi-eye"></i>
            <% end %>
            <%= link_to edit_operario_path(operario), class: "btn btn-warning btn-sm me-1", title: "Editar" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            <%= link_to operario_path(operario), method: :delete, data: { confirm: "¿Estás seguro de eliminar este operario?" }, class: "btn btn-danger btn-sm", title: "Eliminar" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @operarios %>
</div>