<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">No Conformidades</h1>
  <%= link_to 'Nueva No Conformidad', new_no_conformidad_path, class: 'btn btn-success' %>
</div>

<% if @no_conformidads.any? %>
  <table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>Motivo</th>
        <th>Cantidad Afectada</th>
        <th>Observaciones</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @no_conformidads.each do |no_conf| %>
        <tr>
          <td><%= no_conf.motivo %></td>
          <td><%= no_conf.cantidad_afectada %></td>
          <td><%= no_conf.observaciones %></td>
          <td class="text-end">
            <%= link_to 'Ver', no_conf, class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Editar', edit_no_conformidad_path(no_conf), class: 'btn btn-sm btn-outline-secondary me-1' %>
            <%= link_to 'Eliminar', no_conf, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-secondary text-center">No hay registros de no conformidades.</div>
<% end %>
