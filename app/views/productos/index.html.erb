<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Productos</h1>
  <%= link_to 'Nuevo Producto', new_producto_path, class: 'btn btn-success' %>
</div>

<% if @productos.any? %>
  <table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @productos.each do |producto| %>
        <tr>
          <td><%= producto.nombre %></td>
          <td><%= producto.descripcion %></td>
          <td class="text-end">
            <%= link_to 'Ver', producto, class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Editar', edit_producto_path(producto), class: 'btn btn-sm btn-outline-secondary me-1' %>
            <%= link_to 'Eliminar', producto, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-secondary text-center">No hay productos registrados.</div>
<% end %>
