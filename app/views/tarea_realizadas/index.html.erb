<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Tareas Realizadas</h1>
  <%= link_to 'Nueva Tarea Realizada', new_tarea_realizada_path, class: "btn btn-success" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>Descripción</th>
      <th>Cantidad Ejecutada</th>
      <th>Unidad</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @tareas_realizadas.each do |tarea| %>
      <tr>
        <td><%= tarea.descripcion %></td>
        <td><%= tarea.cantidad_ejecutada %></td>
        <td><%= tarea.unidad %></td>
        <td class="text-end">
          <%= link_to 'Ver', tarea_realizada_path(tarea), class: "btn btn-info btn-sm me-1" %>
          <%= link_to 'Editar', edit_tarea_realizada_path(tarea), class: "btn btn-warning btn-sm me-1" %>
          <%= link_to 'Eliminar', tarea_realizada_path(tarea), method: :delete,
                data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>