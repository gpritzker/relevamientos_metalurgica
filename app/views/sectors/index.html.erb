<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Sectores</h1>
  <%= link_to "Nuevo Sector", new_sector_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.nombre %></td>
        <td class="text-end">
          <%= link_to "Ver", sector_path(sector), class: "btn btn-info btn-sm me-1" %>
          <%= link_to "Editar", edit_sector_path(sector), class: "btn btn-warning btn-sm me-1" %>
          <%= link_to "Eliminar", sector_path(sector), method: :delete,
                        data: { confirm: "Â¿Eliminar este sector?" },
                        class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>