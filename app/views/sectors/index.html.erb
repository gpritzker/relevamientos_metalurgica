
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Sectores</h1>
  <%= link_to "Nuevo Sector", new_sector_path, class: "btn btn-success btn-sm" %>
</div>

<% if @sectors.any? %>
  <table class="table table-bordered table-hover table-sm align-middle">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @sectors.each do |sector| %>
        <tr>
          <td><%= sector.nombre %></td>
          <td class="text-end">
            <%= link_to sector_path(sector), class: "btn btn-info btn-sm me-1", title: "Ver" do %>
              <i class="bi bi-eye"></i>
            <% end %>

            <%= link_to edit_sector_path(sector), class: "btn btn-warning btn-sm me-1", title: "Editar" do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>

            <%= link_to sector_path(sector), method: :delete,
                        data: { confirm: "Â¿Eliminar este sector?" },
                        class: "btn btn-danger btn-sm", title: "Eliminar" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @sectors %>
  </div>
<% else %>
  <div class="alert alert-secondary text-center">
    No hay sectores registrados.
  </div>
<% end %>
