
<div class="card mt-4 shadow-sm">
  <div class="card-header bg-dark text-white">
    <h2 class="mb-0">Detalle del Sector</h2>
  </div>

  <div class="card-body">
    <p><strong>Nombre:</strong> <%= @sector.nombre %></p>
  </div>

  <div class="card-footer text-end">
    <%= link_to "Editar", edit_sector_path(@sector), class: "btn btn-warning me-2" %>
    <%= link_to "Volver", sectors_path, class: "btn btn-secondary me-2" %>
    <%= button_to "Eliminar", @sector, method: :delete,
                    data: { confirm: "¿Estás seguro de eliminar este sector?" },
                    class: "btn btn-danger" %>
  </div>
</div>