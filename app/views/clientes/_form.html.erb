<%= form_with(model: cliente, local: true) do |form| %>
  <% if cliente.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(cliente.errors.count, "error") %> impidieron guardar el cliente:</h5>
      <ul>
        <% cliente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nombre, class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cuit, class: "form-label" %>
    <%= form.text_field :cuit, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :telefono, class: "form-label" %>
    <%= form.text_field :telefono, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :direccion, class: "form-label" %>
    <%= form.text_field :direccion, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :observaciones, class: "form-label" %>
    <%= form.text_area :observaciones, class: "form-control" %>
  </div>

  <div class="text-end">
    <%= form.submit cliente.new_record? ? "Crear Cliente" : "Actualizar Cliente", class: "btn btn-primary" %>
  </div>
<% end %>
