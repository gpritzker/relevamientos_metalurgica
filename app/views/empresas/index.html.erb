<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Empresas</h1>
  <%= link_to "Nueva Empresa", new_empresa_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nombre %></td>
        <td class="text-end">
          <%= link_to "Ver", empresa_path(empresa), class: "btn btn-info btn-sm me-1" %>
          <%= link_to "Editar", edit_empresa_path(empresa), class: "btn btn-warning btn-sm me-1" %>
          <%= link_to "Eliminar", empresa_path(empresa), method: :delete, data: { confirm: "¿Estás seguro de eliminar esta empresa?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>