
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Empresas</h1>
  <%= link_to "Nueva Empresa", new_empresa_path, class: "btn btn-success" %>
</div>

<table class="table table-bordered table-striped align-middle">
  <thead class="table-light">
    <tr>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nombre %></td>
        <td class="text-end" style="white-space: nowrap;">
          <span class="d-inline-block">
            <%= link_to empresa_path(empresa), class: "btn btn-info btn-sm", title: "Ver" do %>
              <i class="bi bi-eye"></i>
            <% end %>
          </span>
          <span class="d-inline-block">
            <%= link_to edit_empresa_path(empresa), class: "btn btn-warning btn-sm", title: "Editar" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </span>
          <span class="d-inline-block">
            <%= button_to empresa_path(empresa),
                          method: :delete,
                          data: { confirm: '¿Estás seguro de eliminar esta empresa?' },
                          class: "btn btn-danger btn-sm",
                          title: "Eliminar",
                          form: { class: "d-inline" } do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @empresas %>
</div>
