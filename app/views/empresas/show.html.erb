
<div class="card mt-4 shadow-sm">
  <div class="card-header bg-dark text-white">
    <h2 class="mb-0">Detalle de la Empresa</h2>
  </div>

  <div class="card-body">
    <p><strong>Nombre:</strong> <%= @empresa.nombre %></p>
  </div>

  <div class="card-footer text-end">
    <%= link_to "Editar", edit_empresa_path(@empresa), class: "btn btn-warning me-2" %>
    <%= link_to "Volver al listado", empresas_path, class: "btn btn-secondary" %>
  </div>
</div>