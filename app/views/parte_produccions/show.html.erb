<h2>Detalles de Producci√≥n</h2>

<div class="accordion" id="detalleAccordion">
  <% @parte_produccion.detalle_produccions.each_with_index do |detalle, i| %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading-<%= i %>">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= i %>" aria-expanded="false" aria-controls="collapse-<%= i %>">
          Detalle #<%= i + 1 %> - <%= detalle.descripcion %>
        </button>
      </h2>
      <div id="collapse-<%= i %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= i %>" data-bs-parent="#detalleAccordion">
        <div class="accordion-body">
          <p><strong>Item:</strong> <%= detalle.componente %></p>
          <p><strong>Cantidad a ejecutar:</strong> <%= detalle.cantidad_a_ejecutar %></p>
          <p><strong>Cantidad ejecutada:</strong> <%= detalle.cantidad_ejecutada %></p>
          <p><strong>Aceptados:</strong> <%= detalle.aceptados %></p>
          <p><strong>Rechazados:</strong> <%= detalle.rechazados %></p>
          <p><strong>Hora inicio:</strong> <%= detalle.hora_inicio %></p>
          <p><strong>Hora fin:</strong> <%= detalle.hora_fin %></p>
          <p><strong>Tiempo empleado:</strong> <%= detalle.tiempo_empleado %></p>
          <p><strong>Observaciones:</strong> <%= detalle.observaciones %></p>

          <% if detalle.firma.present? %>
            <p><strong>Firma:</strong></p>
            <img src="<%= detalle.firma %>" alt="Firma del operario" style="border: 1px solid #ccc; max-width: 400px; height: auto;">
          <% else %>
            <p><strong>Firma:</strong> No registrada</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>