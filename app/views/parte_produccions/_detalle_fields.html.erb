<div class="border p-3 mb-3 rounded bg-light">
  <div class="row g-2">
    <div class="col-md-4">
      <%= f.label :descripcion %>
      <%= f.text_field :descripcion, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :componente %>
      <%= f.text_field :componente, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :hora_inicio %>
      <%= f.time_field :hora_inicio, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :hora_fin %>
      <%= f.time_field :hora_fin, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :tiempo_empleado %>
      <%= f.number_field :tiempo_empleado, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :cantidad_a_ejecutar %>
      <%= f.number_field :cantidad_a_ejecutar, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :cantidad_ejecutada %>
      <%= f.number_field :cantidad_ejecutada, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :aceptados %>
      <%= f.number_field :aceptados, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :rechazados %>
      <%= f.number_field :rechazados, class: "form-control" %>
    </div>

    <div class="col-md-12">
      <%= f.label :observaciones %>
      <%= f.text_area :observaciones, class: "form-control", rows: 2 %>
    </div>
  </div>
</div>