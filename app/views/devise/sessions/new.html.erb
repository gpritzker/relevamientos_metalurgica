<% provide(:title, 'Iniciar sesión') %>
<div style="max-width: 400px; margin: 40px auto; padding: 30px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.05); font-family: sans-serif;">
  <h2 style="text-align: center; margin-bottom: 20px;">Iniciar sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :email, 'Correo electrónico' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :password, 'Contraseña' %><br />
      <div style="position: relative;">
        <%= f.password_field :password, id: "password-field", autocomplete: "current-password", style: "width: 100%; padding: 8px; padding-right: 35px;" %>
        <button type="button" id="toggle-password" style="position: absolute; top: 50%; right: 8px; transform: translateY(-50%); background: transparent; border: none; cursor: pointer; font-size: 16px;">👁</button>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div style="margin-bottom: 15px;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Recordarme' %>
      </div>
    <% end -%>

    <div>
      <%= f.submit "Iniciar sesión", style: "width: 100%; background-color: #0069d9; color: white; padding: 10px; border: none; border-radius: 5px;" %>
    </div>
  <% end %>

  <hr style="margin: 20px 0;">

  <div style="text-align: center;">
    <%= link_to "Registrarme", new_registration_path(resource_name), style: "margin-right: 10px;" %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %>
  </div>
</div>

<%# Agregamos el script inline para el "ojito" %>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("toggle-password");
    const passwordInput = document.getElementById("password-field");

    if (toggleBtn && passwordInput) {
      toggleBtn.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        toggleBtn.textContent = type === "password" ? "👁" : "🙈";
      });
    }
  });
</script>