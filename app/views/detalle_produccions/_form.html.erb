<%= form_with(model: @detalle_produccion, local: true) do |f| %>
  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :descripcion %>
      <%= f.text_field :descripcion, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= f.label :componente %>
      <%= f.text_field :componente, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :hora_inicio %>
      <%= f.time_field :hora_inicio, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :hora_fin %>
      <%= f.time_field :hora_fin, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :tiempo_empleado, 'DuraciÃ³n (min)' %>
      <%= f.number_field :tiempo_empleado, class: 'form-control tiempo-empleado' %>
    </div>

    <div class="col-md-3">
      <%= f.label :cantidad_a_ejecutar %>
      <%= f.number_field :cantidad_a_ejecutar, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :cantidad_ejecutada %>
      <%= f.number_field :cantidad_ejecutada, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :aceptados %>
      <%= f.number_field :aceptados, class: 'form-control' %>
    </div>

    <div class="col-md-3">
      <%= f.label :rechazados %>
      <%= f.number_field :rechazados, class: 'form-control' %>
    </div>

    <div class="col-md-12">
      <%= f.label :observaciones %>
      <%= f.text_area :observaciones, rows: 3, class: 'form-control' %>
    </div>

    <div class="col-md-12">
      <%= f.submit 'Guardar', class: 'btn btn-success mt-3' %>
    </div>
  </div>
<% end %>