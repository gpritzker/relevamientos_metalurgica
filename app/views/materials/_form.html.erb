<%= form_with(model: material, local: true) do |form| %>
  <% if material.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(material.errors.count, "error") %> impidieron guardar el material:</h5>
      <ul>
        <% material.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nombre, class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :unidad, class: "form-label" %>
    <%= form.text_field :unidad, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :stock_actual, class: "form-label" %>
    <%= form.number_field :stock_actual, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :stock_minimo, class: "form-label" %>
    <%= form.number_field :stock_minimo, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :observaciones, class: "form-label" %>
    <%= form.text_area :observaciones, class: "form-control" %>
  </div>

  <div class="text-end">
    <%= form.submit material.new_record? ? "Crear Material" : "Actualizar Material", class: "btn btn-primary" %>
  </div>
<% end %>
