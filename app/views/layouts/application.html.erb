<!DOCTYPE html>
<html>
  <head>
    <title>Relevamientos Metalúrgica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body style="font-family: 'Segoe UI', sans-serif; background-color: #f4f4f4; margin: 0; padding: 0;">
    <nav style="background-color: #222; padding: 15px;">
      <div style="max-width: 1200px; margin: 0 auto; color: white;">
        <% if usuario_signed_in? %>
          <%= link_to 'Dashboard', dashboard_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Partes Diarios', parte_diarios_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Tareas Realizadas', tarea_realizadas_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Tiempos Muertos', tiempo_muertos_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Tipos de Tiempo Muerto', tipo_tiempo_muertos_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Operarios', operarios_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Sectores', sectors_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Empresas', empresas_path, style: "color: white; margin-right: 15px;" %>
          <%= link_to 'Categorias', categoria_path, style: "color: white; margin-right: 15px;" %>
          <%= button_to 'Cerrar sesión', destroy_usuario_session_path, method: :delete,
                        form: { style: "display: inline;" },
                        style: "color: white; background: transparent; border: none; cursor: pointer; float: right;" %>
        <% end %>
      </div>
    </nav>

    <div style="max-width: 1200px; margin: 30px auto; padding: 20px; background: white; border-radius: 10px; box-shadow: 0 0 12px rgba(0,0,0,0.08);">
      <% if notice %>
        <p style="background-color: #d4edda; color: #155724; padding: 10px; border-left: 4px solid #28a745; border-radius: 4px;"> <%= notice %> </p>
      <% end %>
      <% if alert %>
        <p style="background-color: #f8d7da; color: #721c24; padding: 10px; border-left: 4px solid #dc3545; border-radius: 4px;"> <%= alert %> </p>
      <% end %>

      <%= yield %>
    </div>

    <% if current_page?(root_path) %>
      <div style="text-align: center; margin: 40px auto;">
        <%= image_tag "obeon.png",
            alt: "Metalúrgica OBEON",
            style: "max-width: 500px; width: 90%; height: auto; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);" %>
      </div>
    <% end %>
  </body>
</html>