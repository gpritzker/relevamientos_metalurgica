<%= form_with(model: escala_salarial, local: true) do |form| %>
  <% if escala_salarial.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(escala_salarial.errors.count, "error") %> impidieron guardar la escala:</h5>
      <ul>
        <% escala_salarial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :categoria, class: "form-label" %>
    <%= form.text_field :categoria, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :sueldo_base, class: "form-label" %>
    <%= form.text_field :sueldo_base, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :observaciones, class: "form-label" %>
    <%= form.text_area :observaciones, class: "form-control" %>
  </div>

  <div class="text-end">
    <%= form.submit escala_salarial.new_record? ? "Crear Escala" : "Actualizar Escala", class: "btn btn-primary" %>
  </div>
<% end %>
